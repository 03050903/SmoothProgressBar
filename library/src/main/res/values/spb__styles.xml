        <item name="spb__speed">@string/spb_default_speed</item>
        <item name="spb__stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb__stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
    </style>

</resources>